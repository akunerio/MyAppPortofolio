<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sayrio.myappportofolio.MainActivity">

    <TextView
        android:id="@+id/id_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="21sp"
        android:textColor="@color/colorTitle"
        android:layout_marginBottom="40dp"
        android:text="@string/home_title" />

    <Button
        android:id="@+id/button_one"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/button_one"
        android:textSize="15sp"
        android:textColor="@color/colorButtonText"
        android:background="@color/colorButton"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/id_title"/>

    <Button
        android:id="@+id/button_two"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/button_two"
        android:textSize="15sp"
        android:textColor="@color/colorButtonText"
        android:background="@color/colorButton"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/button_one"/>

    <Button
        android:id="@+id/button_three"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/button_three"
        android:textSize="15sp"
        android:textColor="@color/colorButtonText"
        android:background="@color/colorButton"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/button_two"/>

    <Button
        android:id="@+id/button_four"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/button_four"
        android:textSize="15sp"
        android:textColor="@color/colorButtonText"
        android:background="@color/colorButton"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/button_three"/>

    <Button
        android:id="@+id/button_five"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/button_five"
        android:textSize="15sp"
        android:textColor="@color/colorButtonText"
        android:background="@color/colorButton"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/button_four"/>

    <Button
        android:id="@+id/button_six"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/button_six"
        android:textSize="15sp"
        android:textColor="@color/colorButtonText"
        android:background="@color/colorButtonAccent"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/button_five"/>
</RelativeLayout>
